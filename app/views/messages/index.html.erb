<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(Message.new, :html => {:class => 'new_messag form-horizontal'} ) do |f| %>

  <div class="form-group">
    <%= f.label :"名前:" , {class: 'col-sm-1'} %>
  <div class="col-sm-11">
  <%= f.text_field :name , :class => 'form-control' , :size => 20 %>
  </div>
  </div>
  <div class="form-group">
    <%= f.label :"内容:" , {class: 'col-sm-1'} %>
  <div class="col-sm-11">
  <%= f.text_area :body , :class => 'form-control' , :cols => 40, :rows => 5 %>
  </div>
  </div>
  <div class="col-sm-offset-1 col-sm-11">
    <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
<% end %>
<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  名前:
  <%= f.text_field :name %>

  内容:
  <%= f.text_field :body %>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>